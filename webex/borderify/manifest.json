{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "borderify@example.com"
    }
  },

  "description": "Adds a solid red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["borderify.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}

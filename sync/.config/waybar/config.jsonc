  //
  // sub monitor
  //
  {
    "output": "HDMI-A-1",
    "layer": "bottom",
    "position": "right",
    "width": 200,
    "spacing": 5,
    "modules-left": ["mpd"],
    "modules-center": [
      "cpu",
      "load",
      "temperature",
      "memory",
      "disk",
      "systemd-failed-units",
    ],
    "modules-right": ["clock"],
    // https://github.com/Alexays/Waybar/wiki/Module:-MPD
    "mpd": {
      "format": "{stateIcon}{title:12.12}",
      "state-icons": {
        "paused": "ÔÅå",
        "playing": "ÔÅã",
      },
      "on-click": "mpc toggle -q",
    },
    "sndio": {
      "format": "{raw_value} üéú",
      "scroll-step": 3,
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-CPU
    "cpu": {
      "interval": 1,
      "format": "{icon0} {icon1} {icon2} {icon3} {icon4} {icon5} {icon6} {icon7}",
      "format-icons": [
        "<span color='#69ff94'>‚ñÅ</span>",
        "<span color='#2aa9ff'>‚ñÇ</span>",
        "<span color='#f8f8f2'>‚ñÉ</span>",
        "<span color='#f8f8f2'>‚ñÑ</span>",
        "<span color='#ffffa5'>‚ñÖ</span>",
        "<span color='#ffffa5'>‚ñÜ</span>",
        "<span color='#ff9977'>‚ñá</span>",
        "<span color='#dd532e'>‚ñà</span>",
      ],
    },
    "load": {
      "interval": 10,
      "format": "load: {load1}",
      "max-length": 10,
    },
    "temperature": {
      // "thermal-zone": 2,
      // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
      // "critical-threshold": 80,
      // "format-critical": "{temperatureC}¬∞C Ôãá",
      "format": "{temperatureC}¬∞C Ôãâ",
    },
    "memory": {
      "interval": 30,
      "format": "{}% ÔÉâ",
      "max-length": 10,
    },
    "disk": {
      "interval": 30,
      "format": "{used}/{total}",
      "path": "/",
    },
    // https://github.com/Alexays/Waybar/wiki/Module:-Clock
    "clock": {
      "format": "{:%m-%d\n%a\n%H:%M}",
      // "rotate": 90,
    },
    "systemd-failed-units": {
      "hide-on-ok": false, // Do not hide if there is zero failed units.
      "format": "‚úó {nr_failed}",
      "format-ok": "‚úì",
      "system": true, // Monitor failed systemwide units.
      "user": false, // Ignore failed user units.
    },
  },
  //
  // main monitor
  //
  {
    "output": "DP-2",
    "layer": "top",
    "position": "bottom",
    "height": 100,
    "modules-left": [ "wlr/taskbar"],
    "modules-right": ["tray"],

    // https://github.com/Alexays/Waybar/wiki/Module:-Taskbar
    "wlr/taskbar": {
      "format": "{icon}{name:12.12}",
      "icon-size": 24,
      "on-click": "minimize-raise",
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10,
      "icons": {
        "blueman": "bluetooth",
        "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png",
